.reviews
    position relative
    width calc(100% - 78px)
    max-width 1440px
    margin 0 auto
    padding 90px 0 93px 0
    @media tablet-landscape-medium
        width calc(100% - 64px)
    @media tablet-portrait-small
        width calc(100% - 40px)

    &::before
        content ""
        position absolute
        top 0
        left 50%
        transform translateX(-50%)
        display block
        width 100vw
        height 100%
        background-color lightest-gray

    &__heading
        position relative
        margin 0 0 46px 0

    &__link-wrapper
        position relative
        margin 44px 0 0 0
        text-align center
        @media phone
            text-align left

.reviews-slider
    position relative
    overflow visible

    &__list
        display flex
        flex-wrap nowrap
        height auto
        margin 0
        padding 0
        list-style none

    &__item
        flex-shrink 0
        width calc(50% - 18px)
        @media laptop
            width calc(50% - 16px)
        @media tablet-portrait-large
            width 100%

    &__arrows
        position absolute
        top -97px
        right 0
        z-index 1
        display flex
        flex-wrap nowrap
        justify-content space-between
        width 80px
        height 37px
        @media phone
            top -87px

    &__arrow
        opacity 1
        outline none
        cursor pointer
        transition opacity .5s 0s ease

        & svg
            fill none
            stroke black
            stroke-width 1.2px
            stroke-dasharray 54px

.reviews-slider__arrow:not(.swiper-button-disabled):hover
    & svg
        animation arrow-drawing
        animation-duration 1s
        animation-timing-function ease
        animation-iteration-count 1

.reviews-slider__arrow.swiper-button-disabled
    opacity .15
    cursor default
    
.review
    position relative
    width 100%
    min-height 360px
    max-height 360px
    background-color white
    border-radius 10px
    overflow hidden
    @media phone
        min-height 480px
        max-height 480px

    &::before
        content ""
        position absolute
        bottom 0
        left 0
        z-index 1
        display block
        width 100%
        height 50%
        background linear-gradient(to top, white 0 50%, transparent)
        transition height 1s 0s ease
        @media phone
            height 35%

    &__info
        position absolute
        top 45px
        left 50px
        width calc(100% - 90px)
        @media tablet-landscape-medium
            top 40px
            left 40px
            width calc(100 - 80px)
        @media tablet-portrait-small
            top 30px
            left 30px
            width calc(100% - 60px)
        @media phone
            top 20px
            left 20px
            width calc(100% - 40px)

    &__date
        margin 0 7px 0 0
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color gray

    &__author
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color black

    &__description
        margin 17px 0 0 0

    &__button
        position absolute
        bottom 50px
        left 50px
        z-index 1
        opacity 0
        visibility hidden
        transition opacity .5s 0s ease, visibility 0s .5s linear, bottom .5s 0s ease, background-color .3s 0s ease
        @media tablet-landscape-large
            opacity 1
            visibility visible
        @media tablet-landscape-medium
            bottom 40px
            left 40px
        @media tablet-portrait-small
            bottom 30px
            left 30px
        @media phone
            bottom 20px
            left 20px

.review:hover
    &::before
        height 60%

    & .review__button
        opacity 1
        visibility visible
        transition opacity .5s 0s ease, visibility 0s 0s linear, bottom .5s 0s ease, background-color .3s 0s ease
