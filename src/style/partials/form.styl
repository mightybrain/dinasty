.form
    &--search
        display flex
        flex-wrap nowrap
        align-items flex-start

    &__group
        width 100%

    &__input
        box-sizing border-box
        width 100%
        padding 9px 15px 8px 15px
        font-family "Spectral"
        font-size 20px
        line-height 28px
        font-weight 300
        color black
        border 1px solid #e9e9e9
        border-radius 10px
        outline none
        background-color white

        &--rounded
            padding 9px 30px 8px 30px
            border-radius 23.5px

        &::placeholder
            font-family "Spectral"
            font-size 20px
            line-height 28px
            font-weight 300
            color black

    &__search-button
        margin 0 0 0 36px
        @media laptop
            margin 0 0 0 32px
        @media tablet-portrait-small
            margin 0 0 0 20px

.form--search
    & .form__group
        flex-grow 1

    

