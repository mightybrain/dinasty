.hidden-block
    position fixed
    top 0
    left 0
    z-index 2
    width 0
    height 100vh
    overflow hidden
    transition width 0s 1s ease

    &__background
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color black
        opacity 0
        transition opacity 1s 0s ease

    &__close-button
        position absolute
        top 33px
        right 33px
        transform rotate(0deg)
        z-index 1
        width 33px
        height 33px
        background none
        border none
        opacity 0
        visibility hidden
        transition transform .5s 0s ease, opacity .5s 0s ease, visibility 0s .5s linear
        outline none
        cursor pointer

        &:hover
            transform rotate(90deg)

        &::before
            content ""
            position absolute
            top 16px
            left 0
            display block
            width 100%
            height 1px
            background-color white
            transform rotate(-45deg)

        &::after
            content ""
            position absolute
            top 16px
            left 0
            display block
            width 100%
            height 1px
            background-color white
            transform rotate(45deg)

    &__container
        position relative
        display flex
        flex-direction column
        align-items center
        width calc(100% + 17px)
        height 100vh
        overflow-y auto
        overflow-x hidden
        opacity 0
        visibility hidden

    &__popup
        display none

body.js-popup-is-open
    overflow-y hidden

    & .hidden-block
        width 100%
        transition none

        &__background
            opacity 1

        &__close-button
            opacity 1
            visibility visible
            transition transform .5s 0s ease, opacity .5s 1s ease, visibility 0s 1s linear

        &__container
            opacity 1
            visibility visible
            transition opacity 1s 1s ease, visibility 0s 1s linear  

.hidden-block__popup.js-popup-is-active
    display block
