.leave-review
    box-sizing border-box
    padding 62px 50px 70px 50px
    background-color lightest-gray
    border-radius 10px
    @media tablet-portrait-medium
        padding 42px 30px 50px 30px
    @media phone
        padding 32px 20px 40px 20px
        border-radius 0

    &__heading
        display block
        margin 0 0 30px 0
        text-align center
        @media tablet-portrait-large
            text-align left

    &__description
        max-width 780px
        margin 0 auto 33px auto
        text-align center
        @media tablet-portrait-large
            max-width none
            text-align left