.links
    &__list
        display flex
        flex-wrap wrap
        width calc(100% + 36px)
        margin 0 0 -36px -36px
        padding 0
        list-style none
        @media tablet-portrait-small
            width 100%
            margin 0 0 -20px 0

    &__item
        position relative
        box-sizing border-box
        width calc(100% / 3 - 36px)
        margin 0 0 36px 36px
        padding 44px 50px
        height 542px
        overflow hidden
        border-radius 10px
        text-align center
        @media tablet-portrait-large
            width calc(100% / 2 - 36px)
            height auto
            text-align left
            border 1px solid light-gray
            border-radius 10px
        @media tablet-portrait-medium
            padding 24px 30px
        @media tablet-portrait-small
            width 100%
            margin 0 0 20px 0

    &__link
        position relative

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 101%
        height 101%
        object-fit cover
        @media tablet-portrait-large
            display none