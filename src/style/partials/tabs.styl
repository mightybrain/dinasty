.tabs
    margin 0 0 -30px 0
    @media tablet-landscape-medium
        margin 0 0 -25px 0
    @media tablet-portrait-small
        width calc(100% + 40px)
        margin 0 0 0 -20px
        overflow-x auto

    &__list
        display flex
        flex-wrap wrap
        justify-content center
        align-items center
        margin 0
        padding 0
        list-style none
        @media tablet-portrait-small
            flex-wrap nowrap
            justify-content flex-start

    &__item
        margin 0 15px 30px 15px
        @media tablet-landscape-medium
            margin 0 12.5px 25px 12.5px
        @media tablet-portrait-small
            margin 12px 25px 11px 0 

        &:first-child
            @media tablet-portrait-small
                padding 0 0 0 20px

        &:last-child
            @media tablet-portrait-small
                padding 0 20px 0 0

    &__button
        position relative
        box-sizing border-box
        padding 0
        font-family "Spectral"
        font-size 20px
        line-height 24px
        font-weight 300
        color black
        white-space nowrap
        border none
        background none
        outline none
        transition padding .3s .15s ease, color .3s 0s ease
        cursor pointer
        @media phone
            font-size 18px
            line-height 22px

        &:hover
            color bright-pink

        &::before
            content ""
            position absolute
            top -12px
            left -30px
            display block
            box-sizing border-box
            width calc(100% + 60px)
            height calc(100% + 23px)
            width 100%
            border 1px solid bright-pink
            border-radius 23.5px
            opacity 0
            visibility hidden
            transition opacity .3s 0s ease, visibility 0s .3s linear , width 0s .3s linear, left 0s .3s linear

.tabs__item--active
    & .tabs__button
        padding 0 30px
        color bright-pink
        cursor default

        &::before
            left 0
            width 100%
            opacity 1
            visibility visible
            transition opacity .3s .3s ease, visibility 0s .3s linear, width 0s 0s linear, left 0s 0s linear
