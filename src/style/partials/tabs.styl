.tabs
    display inline-block
    @media tablet-portrait-large
        width 100%
        height 47px
        overflow-x auto
        overflow-y hidden

    &__list
        display inline-flex
        flex-wrap wrap
        align-items center
        margin 0 0 -30px 0
        padding 12px 0 0 0
        list-style none
        @media tablet-portrait-large
            flex-wrap nowrap

    &__item
        margin 0 15px 30px 15px
        @media tablet-portrait-large
            margin 0 30px 30px 0

    &__button
        position relative
        box-sizing border-box
        padding 0
        font-family "Spectral"
        font-size 20px
        line-height 24px
        font-weight 300
        color black
        white-space nowrap
        border none
        background none
        outline none
        transition padding .3s .15s ease, color .3s 0s ease
        cursor pointer

        &:hover
            color bright-pink

        &::before
            content ""
            position absolute
            top -12px
            left -30px
            display block
            box-sizing border-box
            width calc(100% + 60px)
            height calc(100% + 23px)
            width 100%
            border 1px solid bright-pink
            border-radius 23.5px
            opacity 0
            visibility hidden
            transition opacity .3s 0s ease, visibility 0s .3s linear , width 0s .3s linear, left 0s .3s linear

.tabs__button.js-active-tab
    padding 0 30px
    color bright-pink
    cursor default

    &::before
        left 0
        width 100%
        opacity 1
        visibility visible
        transition opacity .3s .3s ease, visibility 0s .3s linear, width 0s 0s linear, left 0s 0s linear
