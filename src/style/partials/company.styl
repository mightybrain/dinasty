.company
    width calc(100% - 78px)
    max-width 1440px
    margin 0 auto
    @media tablet-landscape-medium
        width calc(100% - 64px)
    @media tablet-portrait-small
        width calc(100% - 40px)

    &__heading
        margin 0 0 46px 0

    &__advantages
        display grid
        grid-template-columns 1fr 1fr 1fr
        grid-template-rows minmax(540px, auto) repeat(2, minmax(335px, auto))
        grid-gap 36px
        @media laptop
            grid-gap 32px
        @media tablet-portrait-large
            grid-template-columns 1fr 1fr
            grid-template-rows auto
            grid-column-gap 32px
            grid-row-gap 50px
        @media tablet-portrait-small
            grid-template-columns 1fr

    &__link-wrapper
        margin 44px 0 0 0
        text-align center
        @media phone
            text-align left

.advantage
    position relative
    box-sizing border-box
    padding 44px 48px
    @media tablet-landscape-medium
        padding 40px
    @media tablet-portrait-large
        padding 0

    &__background
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        border-radius 10px
        overflow hidden
        @media tablet-portrait-large
            position relative
            height 335px
            margin 0 0 20px 0

        &-image
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            display block
            width 101%
            height 101%
            object-fit cover

    &__doctor-image
        position absolute
        bottom 0
        right 170px
        display block
        @media tablet-landscape-large
            right 100px
        @media tablet-landscape-medium
            right 80px
        @media tablet-landscape-small
            right 40px
        @media tablet-portrait-large
            display none

    &__info
        position relative
        display flex
        flex-direction column
        align-items flex-start

        & p:not([class])
            margin 0
            font-family "Spectral"
            font-size 26px
            line-height 30px
            font-weight 300
            color black
            @media tablet-landscape-medium
                font-size 22px
                line-height 26px

    &__note
        @media tablet-portrait-large
            display none

        &-value
            font-family "Spectral"
            font-size 18px
            line-height 22px
            font-weight 300
            color black

        &-hint
            margin 0 0 0 7px
            font-family "Spectral"
            font-size 18px
            line-height 22px
            font-weight 300
            color gray
            @media tablet-portrait-large
                margin 0         

    &__button,
    &__link
        margin 27px 0 0 0

.advantage:nth-child(1)
    grid-column 1 / -1
    @media tablet-portrait-large
        grid-column 1
        grid-row 1
    @media tablet-portrait-small
        grid-column auto
        grid-row auto

    & .advantage__info
        width 50%
        max-width 500px
        height 100%
        @media tablet-portrait-large
            width 100%

    & .advantage__note
        margin auto 0 0 0

.advantage:nth-child(2)
    grid-row 2 / 4
    @media tablet-portrait-large
        grid-column 2
        grid-row 1
    @media tablet-portrait-small
        grid-column auto
        grid-row auto

.advantage:nth-child(3),
.advantage:nth-child(4)
    grid-column 2 / -1
    @media tablet-portrait-large
        grid-column 1 / -1  

    & .advantage__info
        width 280px  
        @media tablet-portrait-large
            width 100% 
    