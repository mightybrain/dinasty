.company
    width 100%
    
    &__row + &__row
        margin 36px 0 0 0
        @media tablet-portrait-large
            margin 100px 0 0 0
            
    &__cols
        display flex
        flex-wrap nowrap
        justify-content space-between
        @media tablet-portrait-medium
            flex-direction column

    &__col
        display flex
        align-items center
        width calc(50% - 18px)
        @media tablet-portrait-large
            align-items flex-start
        @media tablet-portrait-medium
            width 100%

    &__description
        box-sizing border-box
        padding 0 97px
        @media tablet-landscape-medium
            padding 0 50px
        @media tablet-portrait-large
            width 80%
            padding 0
        @media tablet-portrait-medium
            width 100%

    &__image-wrapper
        position relative
        width 100%
        height 600px
        border-radius 10px
        overflow hidden
        @media tablet-portrait-large
            height 350px
        @media tablet-portrait-medium
            max-width 400px
            margin 31px 0 0 0

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 101%
        height 101%
        object-fit cover

    &__branches
        display flex
        flex-direction column
        margin 92px 0 0 0

        &-heading
            margin 0 0 38px 0
            align-self center
            @media tablet-portrait-large
                align-self flex-start

.company__row:nth-child(even)
    & .company__cols
        flex-direction row-reverse
        @media tablet-portrait-large
            flex-direction row
        @media tablet-portrait-medium
            flex-direction column

.company__row > .company__description
    max-width 774px
    margin 0 auto
    padding 108px 0 117px 0
    text-align center
    @media tablet-portrait-large
        padding 44px 0 117px 0
    @media tablet-portrait-medium
        max-width none
        margin 0 0 24px 0
        padding 0
        text-align left
