.advantages
    display flex
    flex-direction column
    width 100%
    
    &__heading
        margin 0 0 46px 0

    &__list
        display grid
        grid-template-columns 1fr 1fr 1fr
        grid-template-rows minmax(540px, auto) repeat(2, minmax(335px, auto))
        grid-gap 36px
        margin 0
        padding 0
        list-style none
        @media tablet-portrait-large
            grid-template-columns 1fr 1fr
            grid-template-rows auto
        @media tablet-portrait-small
            grid-gap 20px
        @media phone
            grid-template-columns 1fr
            grid-gap 50px

    &__link-wrapper
        align-self center
        margin 44px 0 0 0
        @media tablet-portrait-large
            align-self flex-start

.advantage
    position relative
    box-sizing border-box
    width 100%
    height 100%
    padding 44px 48px
    @media tablet-portrait-large
        padding 0

    &__background
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        border-radius 10px
        overflow hidden
        background-color lightest-gray
        @media tablet-portrait-large
            position relative
            margin 0 0 20px 0
            height 400px
        @media tablet-portrait-medium
            height 300px
        @media tablet-portrait-small
            height 250px
        @media phone
            height 350px

        &-image
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            display block
            width 101%
            height 101%
            object-fit cover

    &__info
        position relative
        display flex
        flex-direction column
        align-items flex-start

        & p:not([class])
            margin 0
            font-family "Spectral"
            font-size 26px
            line-height 30px
            font-weight 300
            color black
            @media tablet-portrait-large
                font-size 22px
                line-height 26px 

    &__button,
    &__link
        margin 27px 0 0 0

.advantages__item:nth-child(1)
    grid-column 1 / -1
    @media tablet-portrait-large
        grid-column auto

    & .advantage__info
        width 50%
        max-width 500px
        height 100%
        @media tablet-portrait-large
            width 100%

.advantages__item:nth-child(2)
    grid-row 2 / 4
    @media tablet-portrait-large
        grid-column auto

.advantages__item:nth-child(3),
.advantages__item:nth-child(4)
    grid-column 2 / -1
    @media tablet-portrait-large
        grid-column auto

    & .advantage__info
        width 280px  
        @media tablet-portrait-large
            width 100%
    