.anchors-menu
    display inline-block
    
    &__list
        display inline-flex
        flex-wrap wrap
        justify-content center
        box-sizing border-box
        margin 0
        padding 25px 35px 9px 35px
        background-color white
        border-radius 10px
        box-shadow 5px 0 30px rgba(0 0 0 .15)        
        list-style none

    &__item
        margin 0 15px 15px 15px

    &__button
        padding 0
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color black
        outline none
        border none
        border-bottom 1px dotted black
        background none
        white-space nowrap
        cursor pointer
        transition border .3s 0s ease

        &:hover
            border-bottom 1px dotted transparent