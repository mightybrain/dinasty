.news
    display flex
    flex-wrap wrap
    align-items flex-start
    width calc(100% - 78px)
    max-width 1440px
    margin 0 auto
    padding 83px 0 92px 0
    @media tablet-landscape-medium
        width calc(100% - 64px)
    @media tablet-portrait-small
        width calc(100% - 40px)

    &__heading
        margin 0 0 41px 0

    &__list
        order 1
        display flex
        flex-wrap nowrap
        width calc(100% + 36px)
        margin 0 0 0 -36px
        padding 0
        list-style none
        @media laptop
            width calc(100% + 32px)
            margin 0 0 0 -32px
        @media tablet-portrait-large
            order 0
            flex-direction column
            width 100%
            margin 0

    &__item
        width calc(100% / 3 - 36px)
        margin 0 0 0 36px
        @media laptop
            width calc(100% / 3 - 32px)
            margin 0 0 0 32px
        @media tablet-portrait-large
            width 100%
            margin 0 0 36px 0

    &__link
        position relative
        top 29px
        margin 0 0 0 auto
        @media tablet-portrait-large
            position static
            margin 0

.news-preview
    &__date
        display block
        margin 0 0 8px 0
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color gray

    &__link
        color black
        text-decoration none
        border-bottom 1px solid black
        outline none
        transition border .3s 0s ease

        &:hover
            border-bottom 1px solid transparent

    &__description
        margin 21px 0 0 0
        font-family "Spectral"
        font-size 18px
        line-height 26px
        font-weight 300
        color black