.news
    &--index
        display flex
        flex-wrap wrap
        align-items flex-start
        margin 82px 0 92px 0

    &__heading
        order -2
        margin 0 0 41px 0

    &__list
        display flex
        flex-wrap wrap
        width calc(100% + 36px)
        margin 0 0 -36px -36px
        padding 0
        list-style none
        @media tablet-portrait-small
            width 100%
            margin 0 0 -20px 0

    &__item
        width calc(100% / 3 - 36px)
        margin 0 0 36px 36px
        @media tablet-landscape-medium
            width calc(100% / 2 - 36px)
        @media tablet-portrait-small
            width 100%
            margin 0 0 20px 0

    &__link-wrapper
        order -1
        position relative
        top 29px
        margin 0 0 0 auto
        @media tablet-portrait-medium
            order 0
            margin 36px 0 0 0

    &__pagination
        margin 62px 0 0 0
        text-align center
        @media tablet-portrait-large
            text-align left

.news-preview
    position relative
    box-sizing border-box
    width 100%
    height 100%
    padding 44px 50px 41px 50px
    border 1px solid light-gray
    border-radius 10px
    overflow hidden
    @media tablet-portrait-medium
        padding 24px 30px 21px 30px

    &__image-wrapper
        position relative
        width 160px
        height 100px
        margin 5px 0 25px 0
        overflow hidden
        border-radius 5px

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 101%
        height 101%
        object-fit cover

    &__date
        position relative
        display block
        margin 0 0 8px 0
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color gray

    &__heading
        position relative

    &__link
        color black
        text-decoration none
        border-bottom 1px solid black
        outline none
        transition border .3s 0s ease

        &:hover
            border-bottom 1px solid transparent

    &__description
        position relative
        margin 21px 0 0 0
        font-family "Spectral"
        font-size 18px
        line-height 26px
        font-weight 300
        color black

    & .bubble-container
        opacity .1

    & .bubble
        background-color middle-gray
        animation-duration 1s

.news--index
    & .news__list
        @media tablet-portrait-medium
            flex-direction column
            width 100%
            margin 0 0 -36px 0

    & .news__item
        @media tablet-landscape-medium
            width calc(100% / 3 - 36px)
        @media tablet-portrait-medium
            width 100%
            margin 0 0 36px 0

    & .news-preview
        padding 0
        border none
        border-radius 0